<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="95dp"
    tools:context=".CoursesFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_belum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haven't Done Yet - 0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_belum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/no_result_belum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Data Not Found"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_sudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Done - 0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_sudah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/no_result_sudah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:text="Data Not Found"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>