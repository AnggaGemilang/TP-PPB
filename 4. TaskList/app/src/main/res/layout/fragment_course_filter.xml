<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="95dp"
    tools:context=".CoursesFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edittext_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="11dp"
                android:paddingBottom="9dp"
                android:paddingHorizontal="20dp"
                android:drawablePadding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:background="@drawable/rounded_search_edittext"
                android:hint="Enter Keyword . . ." />

            <TextView
                android:id="@+id/title_belum_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haven't Done Yet - 0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_belum_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/no_result_belum_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Data Not Found"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_sudah_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Done - 0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_sudah_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <TextView
                android:id="@+id/no_result_sudah_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:text="Data Not Found"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>