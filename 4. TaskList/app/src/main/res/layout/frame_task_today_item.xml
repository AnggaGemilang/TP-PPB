<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="25dp"
    android:scrollbars="horizontal"
    android:scrollIndicators="none"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_deadline_today"
        android:layout_width="240dp"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="20dp"
        android:layout_height="125dp" >

        <LinearLayout
            android:id="@+id/linear_layout_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/edge_border_bottom_red"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_deadline_today1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/p_regular"
                android:textSize="12sp"
                android:text="23:59 Deadline" />

            <TextView
                android:id="@+id/txt_title_today1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/p_semibold"
                android:text="Tugas Persona 1" />

            <TextView
                android:id="@+id/txt_course_today1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/p_regular"
                android:textSize="14sp"
                android:text="Pemrograman Perangkat Bergerak" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>